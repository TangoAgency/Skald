<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  >

  <Button
    android:id="@+id/button_spotify_main_play"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="86dp"
    android:layout_marginTop="16dp"
    android:background="@android:color/holo_green_light"
    android:text="Play"
    app:layout_constraintBottom_toTopOf="@+id/button_spotify_main_resume"
    app:layout_constraintHorizontal_bias="0.945"
    app:layout_constraintHorizontal_chainStyle="spread"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@+id/button_deezer_main_play"
    app:layout_constraintTop_toBottomOf="@+id/textView_spotify"
    app:layout_constraintVertical_bias="0.0"
    />
  <Button
    android:id="@+id/button_spotify_main_pause"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="86dp"
    android:background="@android:color/holo_orange_light"
    android:text="Pause"
    app:layout_constraintBottom_toTopOf="@+id/button_spotify_main_stop"
    app:layout_constraintHorizontal_bias="0.641"
    app:layout_constraintHorizontal_chainStyle="spread"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@+id/button_deezer_main_pause"
    app:layout_constraintTop_toBottomOf="@id/button_spotify_main_resume"
    app:layout_constraintVertical_bias="0.454"
    />
  <Button
    android:id="@+id/button_deezer_main_resume"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginRight="16dp"
    android:background="@android:color/holo_blue_light"
    android:text="Resume"
    app:layout_constraintBottom_toTopOf="@id/button_deezer_main_pause"
    app:layout_constraintHorizontal_bias="0.814"
    app:layout_constraintLeft_toRightOf="@id/button_spotify_main_resume"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/button_deezer_main_play"
    />
  <Button
    android:id="@+id/button_spotify_main_resume"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="86dp"
    android:background="@android:color/holo_blue_light"
    android:text="Resume"
    app:layout_constraintBottom_toTopOf="@id/button_spotify_main_pause"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@id/button_deezer_main_resume"
    app:layout_constraintTop_toBottomOf="@id/button_spotify_main_play"
    app:layout_constraintVertical_bias="0.4"
    />
  <Button
    android:id="@+id/button_spotify_main_stop"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="250dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="86dp"
    android:background="@android:color/holo_red_light"
    android:text="Stop"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintHorizontal_bias="0.51"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@+id/button_deezer_main_stop"
    app:layout_constraintTop_toBottomOf="@id/button_spotify_main_pause"
    />
  <Button
    android:id="@+id/button_deezer_main_play"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    android:background="@android:color/holo_green_light"
    android:text="Play"
    app:layout_constraintBottom_toTopOf="@+id/button_deezer_main_resume"
    app:layout_constraintHorizontal_bias="0.493"
    app:layout_constraintLeft_toRightOf="@id/button_spotify_main_play"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView_deezer"
    app:layout_constraintVertical_bias="0.0"
    />
  <Button
    android:id="@+id/button_deezer_main_pause"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="0dp"
    android:background="@android:color/holo_orange_light"
    android:text="Pause"
    app:layout_constraintBottom_toTopOf="@+id/button_deezer_main_stop"
    app:layout_constraintLeft_toRightOf="@id/button_spotify_main_pause"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/button_deezer_main_resume"
    />
  <Button
    android:id="@+id/button_deezer_main_stop"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="250dp"
    android:layout_marginRight="16dp"
    android:background="@android:color/holo_red_light"
    android:text="Stop"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toRightOf="@id/button_spotify_main_stop"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/button_deezer_main_pause"
    />
  <TextView
    android:id="@+id/textView_spotify"
    android:layout_width="84dp"
    android:layout_height="39dp"
    android:text="Spotify"
    android:textAlignment="center"
    android:textSize="24sp"
    android:layout_marginRight="105dp"
    android:layout_marginLeft="24dp"
    app:layout_constraintRight_toLeftOf="@+id/textView_deezer"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@id/button_spotify_main_play"
    android:layout_marginTop="16dp"
    app:layout_constraintHorizontal_bias="0.727"
    />
  <TextView
    android:id="@+id/textView_deezer"
    android:layout_width="89dp"
    android:layout_height="41dp"
    android:layout_marginRight="40dp"
    android:layout_marginTop="16dp"
    android:text="Deezer"
    android:textAlignment="center"
    android:textSize="24sp"
    app:layout_constraintLeft_toRightOf="@id/textView_spotify"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@id/button_deezer_main_play"
    />
</android.support.constraint.ConstraintLayout>