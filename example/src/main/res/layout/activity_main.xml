<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  >

  <ImageButton
    android:id="@+id/imageButton_play"
    android:layout_width="39dp"
    android:layout_height="40dp"
    android:layout_marginBottom="27dp"
    android:layout_marginEnd="14dp"
    android:layout_marginRight="13dp"
    android:layout_marginTop="32dp"
    android:src="@drawable/ic_action_play"
    app:layout_constraintBottom_toBottomOf="@+id/text_title"
    app:layout_constraintHorizontal_chainStyle="spread_inside"
    app:layout_constraintRight_toLeftOf="@+id/imageButton_stop"
    app:layout_constraintTop_toTopOf="@+id/text_artist"
    app:layout_constraintVertical_bias="1.0"
    app:srcCompat="@drawable/ic_action_play"
    tools:layout_constraintBottom_creator="1"
    tools:layout_constraintRight_creator="1"
    tools:layout_constraintTop_creator="1"
    />
  <ImageButton
    android:id="@+id/imageButton_stop"
    android:layout_width="39dp"
    android:layout_height="0dp"
    android:layout_marginEnd="15dp"
    android:layout_marginRight="16dp"
    android:src="@drawable/ic_action_stop"
    app:layout_constraintBottom_toBottomOf="@+id/imageButton_play"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="@+id/imageButton_play"
    app:layout_constraintVertical_bias="1.0"
    app:srcCompat="@drawable/ic_action_stop"
    tools:layout_constraintBottom_creator="1"
    tools:layout_constraintRight_creator="1"
    tools:layout_constraintTop_creator="1"
    />
  <TextView
    android:id="@+id/text_artist"
    android:layout_width="0dp"
    android:layout_height="48dp"
    android:layout_marginBottom="1dp"
    android:layout_marginEnd="16dp"
    android:layout_marginLeft="17dp"
    android:layout_marginRight="16dp"
    android:layout_marginStart="17dp"
    android:textAlignment="center"
    android:textSize="12sp"
    app:layout_constraintBottom_toTopOf="@+id/text_title"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintLeft_toRightOf="@+id/image_cover"
    app:layout_constraintRight_toLeftOf="@+id/imageButton_play"
    tools:layout_constraintLeft_creator="1"
    tools:layout_constraintRight_creator="1"
    />
  <TextView
    android:id="@+id/text_title"
    android:layout_width="0dp"
    android:layout_height="50dp"
    android:layout_marginBottom="32dp"
    android:layout_marginEnd="16dp"
    android:layout_marginLeft="17dp"
    android:layout_marginRight="16dp"
    android:layout_marginStart="17dp"
    android:textAlignment="center"
    android:textSize="12sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintLeft_toRightOf="@+id/image_cover"
    app:layout_constraintRight_toLeftOf="@+id/imageButton_play"
    tools:layout_constraintBottom_creator="1"
    tools:layout_constraintLeft_creator="1"
    tools:layout_constraintRight_creator="1"
    />
  <ImageView
    android:id="@+id/image_cover"
    android:layout_width="127dp"
    android:layout_height="100dp"
    android:layout_marginBottom="32dp"
    android:layout_marginLeft="24dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    tools:layout_constraintBottom_creator="1"
    tools:layout_constraintLeft_creator="1"
    tools:layout_constraintTop_creator="1"
    />
  <Button
    android:id="@+id/button_login_spotify"
    android:layout_width="105dp"
    android:layout_height="44dp"
    android:layout_marginStart="32dp"
    android:layout_marginTop="56dp"
    android:background="@android:color/holo_green_light"
    android:text="@string/login_to_spotify"
    android:textSize="14sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:layout_constraintLeft_creator="1"
    tools:layout_constraintTop_creator="1"
    android:layout_marginLeft="32dp"
    />
  <Button
    android:id="@+id/button_login_deezer"
    android:layout_width="105dp"
    android:layout_height="44dp"
    android:layout_marginStart="52dp"
    android:layout_marginLeft="52dp"
    android:layout_marginTop="56dp"
    android:background="@android:color/holo_blue_light"
    android:text="@string/login_to_deezer"
    android:textSize="14sp"
    app:layout_constraintStart_toEndOf="@+id/button_login_spotify"
    app:layout_constraintTop_toTopOf="parent"
    tools:layout_constraintRight_creator="1"
    tools:layout_constraintTop_creator="1"
    />
  <Button
    android:id="@+id/button_tracks"
    android:layout_width="105dp"
    android:layout_height="44dp"
    android:layout_marginStart="32dp"
    android:layout_marginTop="8dp"
    android:background="@android:color/holo_orange_light"
    android:text="@string/get_tracks"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/button_login_spotify"
    tools:layout_constraintLeft_creator="1"
    tools:layout_constraintRight_creator="1"
    android:layout_marginLeft="32dp"
    />
  <Button
    android:id="@+id/button_playlists"
    android:layout_width="105dp"
    android:layout_height="44dp"
    android:layout_marginStart="52dp"
    android:layout_marginLeft="52dp"
    android:layout_marginTop="8dp"
    android:background="@android:color/holo_orange_light"
    android:text="@string/get_playlists"
    app:layout_constraintStart_toEndOf="@+id/button_tracks"
    app:layout_constraintTop_toBottomOf="@+id/button_login_deezer"
    />
  <FrameLayout
    android:id="@+id/fragment_container"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginBottom="16dp"
    android:layout_marginTop="16dp"
    app:layout_constraintBottom_toTopOf="@+id/text_artist"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/button_tracks"
    tools:layout_constraintBottom_creator="1"
    tools:layout_constraintTop_creator="1"
    >
  </FrameLayout>

  <TextView
    android:id="@+id/text_loading"
    android:layout_width="73dp"
    android:layout_height="27dp"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="25dp"
    android:layout_marginRight="25dp"
    android:textAlignment="center"
    app:layout_constraintBottom_toTopOf="@+id/imageButton_stop"
    app:layout_constraintRight_toRightOf="parent"
    />
  <TextView
    android:id="@+id/text_user_name"
    android:layout_width="wrap_content"
    android:layout_height="37dp"
    android:layout_marginStart="40dp"
    android:layout_marginTop="8dp"
    android:gravity="top|bottom"
    android:text="@string/hello"
    android:textAlignment="center"
    android:textSize="20sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginLeft="40dp"
    />
  <ImageView
    android:id="@+id/image_user"
    android:layout_width="53dp"
    android:layout_height="37dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    app:layout_constraintStart_toEndOf="@+id/text_user_name"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginLeft="8dp"
    />
</android.support.constraint.ConstraintLayout>