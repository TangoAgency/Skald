<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  >

  <ImageButton
    android:id="@+id/imageButton_play"
    android:layout_width="39dp"
    android:layout_height="40dp"
    android:layout_marginBottom="27dp"
    android:layout_marginEnd="14dp"
    android:layout_marginRight="13dp"
    android:layout_marginTop="32dp"
    android:src="@drawable/ic_action_play"
    app:layout_constraintBottom_toBottomOf="@+id/text_title"
    app:layout_constraintHorizontal_chainStyle="spread_inside"
    app:layout_constraintRight_toLeftOf="@+id/imageButton_stop"
    app:layout_constraintTop_toTopOf="@+id/text_artist"
    app:layout_constraintVertical_bias="1.0"
    app:srcCompat="@drawable/ic_action_play"
    tools:layout_constraintBottom_creator="1"
    tools:layout_constraintRight_creator="1"
    tools:layout_constraintTop_creator="1"
    />

  <ImageButton
    android:id="@+id/imageButton_stop"
    android:layout_width="39dp"
    android:layout_height="0dp"
    android:layout_marginEnd="15dp"
    android:layout_marginRight="16dp"
    android:src="@drawable/ic_action_stop"
    app:layout_constraintBottom_toBottomOf="@+id/imageButton_play"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="@+id/imageButton_play"
    app:layout_constraintVertical_bias="1.0"
    app:srcCompat="@drawable/ic_action_stop"
    tools:layout_constraintBottom_creator="1"
    tools:layout_constraintRight_creator="1"
    tools:layout_constraintTop_creator="1"
    />

  <TextView
    android:id="@+id/text_artist"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_margin="8dp"
    app:layout_constraintBottom_toTopOf="@+id/text_title"
    app:layout_constraintEnd_toStartOf="@+id/imageButton_play"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toEndOf="@+id/image_cover"
    app:layout_constraintTop_toBottomOf="@+id/list_view_tracks"
    tools:text="@string/app_name"
    />

  <TextView
    android:id="@+id/text_title"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginBottom="8dp"
    android:textStyle="bold"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="@+id/text_artist"
    app:layout_constraintLeft_toRightOf="@+id/image_cover"
    app:layout_constraintStart_toStartOf="@+id/text_artist"
    app:layout_constraintTop_toBottomOf="@+id/text_artist"
    tools:text="@string/app_name"
    />

  <ImageView
    android:id="@+id/image_cover"
    android:layout_width="96dp"
    android:layout_height="96dp"
    android:layout_margin="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    tools:layout_constraintBottom_creator="1"
    tools:layout_constraintLeft_creator="1"
    tools:layout_constraintTop_creator="1"
    tools:src="@drawable/ic_track_image_24dp_black"
    />

  <Button
    android:id="@+id/button_login_spotify"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_marginTop="8dp"
    android:background="@android:color/holo_green_light"
    android:text="@string/login_to_spotify"
    app:layout_constraintEnd_toStartOf="@+id/button_login_deezer"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/image_user"
    />

  <Button
    android:id="@+id/button_login_deezer"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="8dp"
    android:background="@android:color/holo_blue_light"
    android:text="@string/login_to_deezer"
    app:layout_constraintBottom_toBottomOf="@+id/button_login_spotify"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toEndOf="@+id/button_login_spotify"
    app:layout_constraintTop_toTopOf="@+id/button_login_spotify"
    />

  <Button
    android:id="@+id/button_tracks"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@android:color/holo_orange_light"
    android:text="@string/get_tracks"
    app:layout_constraintEnd_toEndOf="@+id/button_login_spotify"
    app:layout_constraintStart_toStartOf="@+id/button_login_spotify"
    app:layout_constraintTop_toBottomOf="@+id/button_login_spotify"
    />

  <Button
    android:id="@+id/button_playlists"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@android:color/holo_orange_light"
    android:text="@string/get_playlists"
    app:layout_constraintEnd_toEndOf="@+id/button_login_deezer"
    app:layout_constraintStart_toStartOf="@+id/button_login_deezer"
    app:layout_constraintTop_toBottomOf="@+id/button_login_deezer"
    />

  <ListView
    android:id="@+id/list_view_tracks"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    app:layout_constraintBottom_toTopOf="@+id/image_cover"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/button_playlists"
    />

  <ProgressBar
    android:id="@+id/loading_list_progress_bar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="@+id/list_view_tracks"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="@+id/list_view_tracks"
    />

  <TextView
    android:id="@+id/text_user_name"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:gravity="center"
    android:text="@string/hello"
    android:textAlignment="center"
    app:layout_constraintBottom_toBottomOf="@+id/image_user"
    app:layout_constraintEnd_toStartOf="@+id/image_user"
    app:layout_constraintTop_toTopOf="@+id/image_user"
    />

  <ImageView
    android:id="@+id/image_user"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_margin="8dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:src="@drawable/ic_person_24dp_black"
    />

  <ProgressBar
    android:id="@+id/loading_track_progress_bar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toLeftOf="@+id/imageButton_play"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/list_view_tracks"
    />
</android.support.constraint.ConstraintLayout>